<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_orange_gradient"
    tools:context=".ui.activity.classes.SplashScreenActivity">

    <ImageView
        android:id="@+id/rjdLogoTop"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@+id/rjdTextMiddle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_logo_rjd_color"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/rjdTextMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/quentinpro"
        android:letterSpacing=".05"
        android:text="@string/rjd_lowercase_name"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/rjdTextBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gregular"
        android:text="@string/the_all_in_one_food_shop"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>